# Nexora IT - Environment Configuration Template
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to version control!

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_HOST=localhost
DB_NAME=nexora_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=Nexora
APP_ENV=production
# Options: development, staging, production
APP_DEBUG=false
APP_URL=https://www.nexora.com

# ==========================================
# CONTACT INFORMATION
# ==========================================
CONTACT_EMAIL=nexorait@outlook.com
CONTACT_PHONE_1=+94776350902
CONTACT_PHONE_2=+94706717131
CONTACT_WHATSAPP=+94706717131
CONTACT_ADDRESS=218 Doalakanda, Dehiaththakandiya, Sri Lanka

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
# For PHPMailer or similar
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@nexora.com
MAIL_FROM_NAME=Nexora

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Session lifetime in minutes
SESSION_LIFETIME=120

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# Rate limiting (requests per time period)
RATE_LIMIT_CONTACT=3
RATE_LIMIT_CONTACT_MINUTES=5
RATE_LIMIT_NEWSLETTER=2
RATE_LIMIT_NEWSLETTER_MINUTES=10

# ==========================================
# RECAPTCHA (Optional - for spam protection)
# ==========================================
RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET_KEY=your-secret-key
RECAPTCHA_ENABLED=false

# ==========================================
# SOCIAL MEDIA LINKS
# ==========================================
SOCIAL_FACEBOOK=https://facebook.com/nexora
SOCIAL_TWITTER=https://twitter.com/nexora
SOCIAL_LINKEDIN=https://linkedin.com/company/nexora
SOCIAL_INSTAGRAM=https://instagram.com/nexora

# ==========================================
# TIMEZONE
# ==========================================
TIMEZONE=Asia/Colombo

# ==========================================
# FILE UPLOAD SETTINGS
# ==========================================
MAX_UPLOAD_SIZE=10485760
# 10MB in bytes (10 * 1024 * 1024)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=error
# Options: debug, info, warning, error, critical
LOG_FILE=logs/app.log

# ==========================================
# BACKUP SETTINGS
# ==========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# ==========================================
# CDN (Optional)
# ==========================================
CDN_ENABLED=false
CDN_URL=https://cdn.nexora.com

# ==========================================
# ANALYTICS (Optional)
# ==========================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# ==========================================
# API KEYS (Optional)
# ==========================================
# Add any third-party API keys here
PAYMENT_GATEWAY_KEY=
PAYMENT_GATEWAY_SECRET=
SMS_API_KEY=
SMS_API_SECRET=

# ==========================================
# NOTES
# ==========================================
# 1. Ensure .env file has proper permissions (600 or 644)
# 2. Never commit .env file to version control
# 3. Add .env to .gitignore
# 4. Update values in production environment
# 5. Backup .env file securely
# 6. Use strong passwords and API keys
# 7. Change all default passwords before deployment
